{
  "name": "@gooddollar/tools",
  "version": "0.0.1",
  "description": "GoodDollar's development tools",
  "homepage": "https://gooddollar.org",
  "license": "MIT",
  "author": "GoodDollar Community <builders@gooddollar.org>",
  "engines": {
    "node": ">=10.0.0",
    "npm": "^3.0.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --no-ci --concurrency 3",
    "postinstall": "npm run bootstrap",
    "logs:blockchain": "pm2 logs good-contracts",
    "logs:dapp": "pm2 logs good-dapp",
    "logs:server": "pm2 logs good-server",
    "monitor": "pm2 monit",
    "start": "pm2 start",
    "start:blockchain": "lerna run --scope @gooddollar/goodcontracts start",
    "start:dapp": "lerna run --scope @gooddollar/gooddapp web",
    "start:server": "lerna run --scope @gooddollar/goodserver dev",
    "stop": "pm2 stop all",
    "stop:blockchain": "pm2 stop GoodContracts",
    "stop:dapp": "pm2 stop GoodDApp",
    "stop:server": "pm2 stop GoodServer"
  },
  "dependencies": {
    "ganache-cli": "^6.3.0",
    "lerna": "^3.13.0",
    "npm": "^6.8.0",
    "pm2": "^3.3.0",
    "truffle": "^5.0.4"
  }
}
